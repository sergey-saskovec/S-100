<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SupportFragment"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/txt_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_support"
        android:textSize="17sp"/>
    <Spinner
        android:id="@+id/theme_support"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/txt_support"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:entries="@array/theme_support"/>
    <EditText
        android:id="@+id/suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ваше предложение"
        android:inputType="text"
        tools:layout_editor_absoluteX="-57dp"
        tools:layout_editor_absoluteY="-7dp"
        android:layout_below="@id/theme_support"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <TextView
        android:id="@+id/desc_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Опишите свое предложение подробно, дабы мы рассмотрели все его тонкости "
        android:textSize="17sp"
        android:layout_below="@id/suggestion"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <EditText
        android:id="@+id/support_e_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="-57dp"
        tools:layout_editor_absoluteY="-7dp"
        android:layout_below="@id/desc_suggestion"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Отправить"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
